<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <div class="col-sm-2"><span class="label label-info"><%= message.name %></span></div>
      <div class="col-sm-2"><%= message.age%></div>
      <div class="col-sm-6"><%= message.body%></div>
      <div class="col-sm-2">
        (<%= link_to "edit" , edit_message_path(message) %>
         <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        )
      </div>
      <br>
    <% end %>
  </div>
</div>

<%= render 'form' %>